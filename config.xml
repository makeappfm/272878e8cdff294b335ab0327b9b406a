<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.vendedoroi.app"
        versionCode = "10"
        version     = "1.0.0">

    <name>Vendedor Online Internacional</name>

    <description>
        O Treinamento Vendedor Online Internacional te ensina como criar um Negócio 100% Online que fature em Dólares nos Estados Unidos
    </description>

    <author>Tadapp</author>

    <plugin name='cordova-plugin-splashscreen' />
    <plugin name='cordova-plugin-inappbrowser' />
    <plugin name='cordova-plugin-network-information' />

    <preference name='phonegap-version' value='cli-9.0.0' />

    <gap:plugin name='onesignal-cordova-plugin' spec='2.4.5' source='npm' />

    <preference name='android-build-tool' value='gradle' />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name='orientation' value='default' />

    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenSpinnerColor" value="#c4302b" />

    <preference name="Fullscreen" value="false" />


    <platform name="android">
        <icon src="res/android/icon/ldpi_1604440307_b755b29fce335fe80237.png" density="ldpi" />
        <icon src="res/android/icon/mdpi_1604440307_b755b29fce335fe80237.png" density="mdpi" />
        <icon src="res/android/icon/hdpi_1604440307_b755b29fce335fe80237.png" density="hdpi" />
        <icon src="res/android/icon/xhdpi_1604440307_b755b29fce335fe80237.png" density="xhdpi" />
        <icon src="res/android/icon/xxhdpi_1604440307_b755b29fce335fe80237.png" density="xxhdpi" />
        <icon src="res/android/icon/xxxhdpi_1604440307_b755b29fce335fe80237.png" density="xxxhdpi" />

        <splash src="res/android/screen/hdpi_port_1606496963_d2c3b40ff1c1c39daa6d.png" density="port-hdpi"/>
        <splash src="res/android/screen/ldpi_port_1606496963_d2c3b40ff1c1c39daa6d.png" density="port-ldpi"/>
        <splash src="res/android/screen/mdpi_port_1606496963_d2c3b40ff1c1c39daa6d.png" density="port-mdpi"/>
        <splash src="res/android/screen/xhdpi_port_1606496963_d2c3b40ff1c1c39daa6d.png" density="port-xhdpi"/>
        <splash src="res/android/screen/hdpi_land_1606496963_d2c3b40ff1c1c39daa6d.png" density="land-hdpi"/>
        <splash src="res/android/screen/ldpi_land_1606496963_d2c3b40ff1c1c39daa6d.png" density="land-ldpi"/>
        <splash src="res/android/screen/mdpi_land_1606496963_d2c3b40ff1c1c39daa6d.png" density="land-mdpi"/>
        <splash src="res/android/screen/xhdpi_land_1606496963_d2c3b40ff1c1c39daa6d.png" density="land-xhdpi"/>
    </platform>

    <access origin='*'/>
    <plugin name='cordova-plugin-whitelist' />
    <allow-intent href='http://*/*'/>
    <allow-intent href='https://*/*'/>
    <allow-intent href='tel:*'/>
    <allow-intent href='sms:*'/>
    <allow-intent href='mailto:*'/>
    <allow-intent href='geo:*'/>

</widget>